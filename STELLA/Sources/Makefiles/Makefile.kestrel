# Host: kestrel at PPPL (Opteron cluster)

COMPILER=pathscale
CHIP=opteron
ifdef FFTWHOME
	ifdef DBLE
		USE_FFT = fftw
	else
		override USE_FFT =
	endif
else
	override  USE_FFT =
endif
ifdef NETCDFHOME
	USE_NETCDF = on
else
	override USE_NETCDF =
endif

include Makefile.$(COMPILER)

ifdef USE_MPI
	LIBS += -lmpichf90
endif

ifeq ($(USE_FFT),fftw)
	FFT_INC = -I${FFTWHOME}/include
	ifdef DBLE
# The double precision versions of FFTW are default, don't use dfftw,...
		FFT_LIB = -L${FFTWHOME}/lib -lrfftw -lfftw
	endif
endif

ifdef USE_NETCDF
	NETCDF_INC = -I${NETCDFHOME}/include
	NETCDF_LIB = -L${NETCDFHOME}/lib -lnetcdf
endif

